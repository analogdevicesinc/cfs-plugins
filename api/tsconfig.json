{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "module": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "target": "es2022",
    "moduleResolution": "NodeNext",
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "ts-node": {
    "esm": true
  }
}
