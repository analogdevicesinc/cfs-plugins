<%~ include("@normalizeSoc", it) %>

CONFIG_STDOUT_CONSOLE=y
CONFIG_SCHED_CPU_MASK=y

# Build for debug (no optimizations) by default
CONFIG_DEBUG=y
CONFIG_NO_OPTIMIZATIONS=y

# Enable thread awareness when debugging
CONFIG_THREAD_NAME=y
CONFIG_DEBUG_THREAD_INFO=y
CONFIG_THREAD_ANALYZER=y

<% if (["MAX32690", "MAX32657", "MAX32658"].includes(it.projectInflectionPoint(it.soc))) { %>
# Enable Zephyr core dump support
CONFIG_DEBUG_COREDUMP=y
CONFIG_DEBUG_COREDUMP_BACKEND_FLASH_PARTITION=y
CONFIG_DEBUG_COREDUMP_MEMORY_DUMP_THREADS=y
CONFIG_SMP=n
CONFIG_PRINTK=y
CONFIG_LOG=y

CONFIG_HEAP_MEM_POOL_SIZE=8192
CONFIG_MAIN_STACK_SIZE=16384


# Enable flash support
CONFIG_FLASH=y
